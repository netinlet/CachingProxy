{
  "mcpServers": {
    "dotnet-sse-server": {
      "command": "dotnet",
      "args": ["run", "--", "--port", "3005", "--log-file", "./logs/mcp-sse-server.log", "--log-level", "Debug"],
      "transport": {
        "type": "sse",
        "url": "http://localhost:3005/sse"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "description": "Custom .NET MCP Server with SSE transport",
      "capabilities": {
        "resources": true,
        "tools": true,
        "prompts": true
      },
      "timeout": 30000,
      "retries": 3
    }
  },
  "globalSettings": {
    "logLevel": "debug",
    "timeout": 30000,
    "enableAutoReconnect": true,
    "reconnectInterval": 5000
  }
}