{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MediaCache": {
    "CacheDirectory": "./media-cache",
    "HttpTimeout": "00:02:00",
    "MaxConcurrentDownloads": 10,
    "MaxFileSizeBytes": 104857600,
    "AllowedExtensions": [
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".webp",
      ".svg",
      ".bmp",
      ".ico",
      ".mp4",
      ".webm",
      ".avi",
      ".mov",
      ".mkv",
      ".flv",
      ".wmv"
    ]
  }
}
